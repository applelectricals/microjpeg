                  completedAt: new Date()
                })
                .where(eq(creditPurchases.stripePaymentIntentId, paymentIntent.id));
            }
          } catch (error) {
            console.error('Failed to process credit purchase payment failure:', error);
          }
        }
        break;
      }

      default:
        console.log(`Unhandled event type ${event.type}`);
    }

